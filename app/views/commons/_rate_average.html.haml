%div{:id => "star-rate#{comment.id}"}
  :javascript
    $('#star-rate#{comment.id}').raty({
      size      : 36,
      starOff   : '#{asset_path('star-off.png')}',
      starOn    : '#{asset_path('star-on.png')}',
      half      : false,
      readOnly: true,
      score: "#{comment.average(:rate).to_f.round(1)}",
    });