.container
  = form_with(model:@movie, url:movies_path, method:'post', local:true ) do |f|
    %div
      = f.label :eyecatch, 'アイキャッチ'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title
    %div
      = f.label :story, 'ストーリー'
    %div
      = f.text_area :story
    .actions
      = f.submit 'SUBMIT', class: 'avatar_submit_btn'